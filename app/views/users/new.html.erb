<h1>New User</h1>

<%= form_with scope: :user, url: users_path do |form| %>

<p>
  <%= form.label :name, "Name" %><br>
  <%= form.text_field :name %>
</p>

<p>
  <%= form.label :height, "Height (in inches)" %><br>
  <%= form.text_field :height %>
</p>

<p>
  <%= form.label :happiness, "How happy are you? (1-5 scale)" %><br>
  <%= form.text_field :happiness %>
</p>

<p>
  <%= form.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
  <%= form.text_field :nausea %>
</p>

<p>
  <%= form.label :tickets, "How many dollars are in your pocket?" %><br>
  <%= form.text_field :tickets %>
</p>

<p>
  <%= form.label :admin, "Check box if you are a theme park owner" %>
  <%= form.check_box :admin, id: "user_admin" %>
</p>

<p>
  <%= form.label :password %><br>
  <%= form.text_field :password %>
</p>

<p>
  <%= form.submit "Create User" %>
</p>

<% end %>
